@model IEnumerable<URL_Shortener1.Models.URL>

<h1>View</h1>

@if (User.Identity.IsAuthenticated)
{
    <form id="shortenForm">
        <input type="text" id="longUrl" placeholder="Введіть URL" required />
        <button type="submit">Скоротити</button>
    </form>
    <p id="message" style="color: red; display: none;">URL не може бути порожнім.</p>
}

@* remake with geturls *@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OriginalUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortenedUrl)
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model is not null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OriginalUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShortenedUrl)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
}
    </tbody>
</table>
